<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_gravity="top"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_card"
        android:backgroundTint="@color/greenbg100">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_foreground"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginStart="24dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/greenlbl"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Activa"/>

        <TextView
            android:id="@+id/tv_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/bluebg"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="5439 2401 1234 1234"/>

        <TextView
            android:id="@+id/tv_titular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:text="Fulanito de tal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/titular"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_card_amount"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/bluebg"
        android:textSize="18sp"
        android:text="$1,500.00"/>
</LinearLayout>